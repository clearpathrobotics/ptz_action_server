<?xml version="1.0" ?>
<launch>
  <arg name="cmd_ns" default="/axis/cmd" />
  <arg name="status_topic" default="/axis/state/position" />
  <arg name="act_ns" default="/axis" />
  <arg name="limits_config" default="$(find-pkg-share axis_ptz_action_server)/config/limits_dome.yaml" />
  <arg name="camera_name" default="ptz_camera" />
  <arg name="publish_joint_states" default="true" />

  <group>
    <push_ros_namespace namespace="$(var cmd_ns)"/>
    <node name="ptz_action_server_node" pkg="axis_ptz_action_server" exec="axis_ptz_action_server_node">
      <param name="cmd_ns" value="$(var cmd_ns)" />
      <param name="status_topic" value="$(var status_topic)" />
      <param name="act_ns"       value="$(var act_ns)" />

      <param name="publish_joint_states" value="$(var publish_joint_states)" />
      <param name="pan_joint"  value="$(var camera_name)_pan_joint" />
      <param name="tilt_joint" value="$(var camera_name)_tilt_joint" />
      <param name="camera_base_link" value="$(var camera_name)_base_link" />
      <param from="$(var limits_config)" />
    </node>
  </group>
</launch>
